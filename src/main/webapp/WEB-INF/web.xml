<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>

  <servlet>
    <servlet-name>registration</servlet-name>
    <servlet-class>com.company.Controller.RegServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>addEmail</servlet-name>
    <servlet-class>com.company.Controller.AddEmailServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>main</servlet-name>
    <servlet-class>com.company.Controller.MainServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>editEmail</servlet-name>
    <servlet-class>com.company.Controller.EditEmailServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>email</servlet-name>
    <servlet-class>com.company.Controller.EmailServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>registration</servlet-name>
    <url-pattern>/reg</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>main</servlet-name>
    <url-pattern/>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>email</servlet-name>
    <url-pattern>/email</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>addEmail</servlet-name>
    <url-pattern>/addEmail</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>editEmail</servlet-name>
    <url-pattern>/editEmail</url-pattern>
  </servlet-mapping>



</web-app>

